<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<h4>Trainer's Captured Pokemon</h4>
<table>                         
  <tr>                          
    <th>Name</th>
    <th>Level</th>
    <th>Health</th>
    <th></th>
  </tr>
<% @all_pokemon.each do |pokemon| %>
	<% if pokemon.trainer_id == @trainer.id %>
	  <tr>
	  	<% @pokemon = pokemon %>
	    <td><%= pokemon.name %></td>
	    <td><%= pokemon.level %></td>
	    <td><%= pokemon.health %></td>
	    <td><%= button_to "Damage!", damage_path(id: @pokemon), :class => "button medium", :method => :patch %></td>
	  </tr>
	<% end %>
<% end %>

<% trainer.pokemons %>
</table> 

<% if current_trainer == @trainer %>
	<h4>Create New Pokemon</h4>
	<%= link_to "Create!", new_pokemon_path, :class => "button medium" %>
<% end %>
